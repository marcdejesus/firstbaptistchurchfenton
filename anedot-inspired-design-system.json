{
  "designSystem": {
    "name": "Anedot-Inspired Church Design System",
    "version": "1.0.0",
    "description": "Design system inspired by Anedot's modern, clean blog design adapted for First Baptist Church Fenton",
    "inspiration": "https://www.anedot.com/blog/best-church-websites",
    
    "colorPalette": {
      "primary": {
        "brand": "#1e3a8a",
        "brandLight": "#3b82f6",
        "brandDark": "#1e40af",
        "description": "Deep blue primary color inspired by Anedot's brand blue"
      },
      "secondary": {
        "accent": "#dc2626",
        "accentLight": "#ef4444",
        "accentDark": "#b91c1c",
        "description": "Red accent color for CTAs and links"
      },
      "neutral": {
        "white": "#ffffff",
        "gray50": "#f9fafb",
        "gray100": "#f3f4f6",
        "gray200": "#e5e7eb",
        "gray300": "#d1d5db",
        "gray400": "#9ca3af",
        "gray500": "#6b7280",
        "gray600": "#4b5563",
        "gray700": "#374151",
        "gray800": "#1f2937",
        "gray900": "#111827"
      },
      "semantic": {
        "success": "#10b981",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "info": "#3b82f6"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "secondary": "Lora, Georgia, serif",
        "display": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
      },
      "fontWeights": {
        "light": "300",
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700",
        "extrabold": "800"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem"
      },
      "lineHeight": {
        "tight": "1.25",
        "snug": "1.375",
        "normal": "1.5",
        "relaxed": "1.625",
        "loose": "2"
      }
    },

    "spacing": {
      "scale": {
        "xs": "0.5rem",
        "sm": "0.75rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem",
        "4xl": "6rem",
        "5xl": "8rem"
      },
      "containerMaxWidth": "1200px",
      "containerPadding": "1rem"
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
    },

    "components": {
      "topBanner": {
        "description": "Promotional banner at the top of the page",
        "design": {
          "backgroundColor": "#1e3a8a",
          "textColor": "#ffffff",
          "height": "auto",
          "padding": "0.75rem 1rem",
          "fontSize": "0.875rem",
          "fontWeight": "500",
          "textAlign": "center",
          "closeButton": {
            "display": true,
            "color": "#ffffff",
            "hover": "#f3f4f6"
          }
        },
        "content": {
          "text": "Join us for Sunday Service at 10 AM â†’",
          "ctaText": "Plan Your Visit",
          "ctaLink": "/visit"
        }
      },

      "header": {
        "description": "Main site header with navigation",
        "design": {
          "backgroundColor": "#ffffff",
          "borderBottom": "1px solid #e5e7eb",
          "padding": "1rem 0",
          "sticky": true,
          "shadow": "0 1px 3px 0 rgb(0 0 0 / 0.1)"
        },
        "logo": {
          "height": "40px",
          "width": "auto",
          "position": "left"
        },
        "navigation": {
          "style": "horizontal",
          "fontSize": "0.875rem",
          "fontWeight": "500",
          "spacing": "2rem",
          "hoverEffect": "underline",
          "activeColor": "#1e3a8a"
        },
        "buttons": {
          "subscribe": {
            "variant": "outline",
            "color": "#1e3a8a",
            "borderColor": "#1e3a8a",
            "backgroundColor": "transparent",
            "hover": {
              "backgroundColor": "#1e3a8a",
              "color": "#ffffff"
            }
          },
          "primary": {
            "variant": "filled",
            "backgroundColor": "#1e3a8a",
            "color": "#ffffff",
            "hover": {
              "backgroundColor": "#1e40af"
            }
          }
        }
      },

      "hero": {
        "description": "Main hero section with title and supporting images",
        "design": {
          "backgroundColor": "#ffffff",
          "padding": "4rem 0",
          "textAlign": "left",
          "maxWidth": "1200px",
          "margin": "0 auto"
        },
        "title": {
          "fontSize": "2.25rem",
          "fontWeight": "700",
          "color": "#1f2937",
          "lineHeight": "1.25",
          "marginBottom": "1rem"
        },
        "subtitle": {
          "fontSize": "1.125rem",
          "color": "#6b7280",
          "lineHeight": "1.625",
          "marginBottom": "2rem"
        },
        "supportingImages": {
          "display": true,
          "layout": "grid",
          "gap": "1rem",
          "borderRadius": "0.5rem",
          "aspectRatio": "16/9"
        }
      },

      "ctaCard": {
        "description": "Call-to-action card component like 'Discover the Anedot advantage'",
        "design": {
          "backgroundColor": "#1e3a8a",
          "borderRadius": "0.75rem",
          "padding": "2rem",
          "textAlign": "center",
          "maxWidth": "320px",
          "position": "sticky",
          "top": "2rem"
        },
        "title": {
          "fontSize": "1.5rem",
          "fontWeight": "700",
          "color": "#ffffff",
          "marginBottom": "1rem"
        },
        "description": {
          "fontSize": "0.875rem",
          "color": "#e5e7eb",
          "marginBottom": "1.5rem"
        },
        "button": {
          "backgroundColor": "#dc2626",
          "color": "#ffffff",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "0.375rem",
          "fontWeight": "600",
          "hover": {
            "backgroundColor": "#b91c1c"
          }
        },
        "image": {
          "borderRadius": "0.5rem",
          "marginTop": "1rem"
        }
      },

      "contentCard": {
        "description": "Content cards for showcasing church websites/ministries",
        "design": {
          "backgroundColor": "#ffffff",
          "borderRadius": "0.5rem",
          "padding": "1.5rem",
          "marginBottom": "3rem",
          "border": "1px solid #e5e7eb"
        },
        "title": {
          "fontSize": "1.5rem",
          "fontWeight": "700",
          "color": "#1f2937",
          "marginBottom": "1rem"
        },
        "image": {
          "borderRadius": "0.5rem",
          "marginBottom": "1rem",
          "aspectRatio": "16/9"
        },
        "website": {
          "fontSize": "0.875rem",
          "fontWeight": "600",
          "color": "#dc2626",
          "marginBottom": "1rem"
        },
        "description": {
          "fontSize": "1rem",
          "color": "#4b5563",
          "lineHeight": "1.625",
          "marginBottom": "1rem"
        },
        "highlights": {
          "title": {
            "fontSize": "0.875rem",
            "fontWeight": "600",
            "color": "#1f2937",
            "marginBottom": "0.5rem"
          },
          "list": {
            "fontSize": "0.875rem",
            "color": "#4b5563",
            "lineHeight": "1.5",
            "bulletColor": "#dc2626"
          }
        }
      },

      "button": {
        "description": "Button component variants",
        "variants": {
          "primary": {
            "backgroundColor": "#1e3a8a",
            "color": "#ffffff",
            "border": "none",
            "borderRadius": "0.375rem",
            "padding": "0.75rem 1.5rem",
            "fontSize": "0.875rem",
            "fontWeight": "600",
            "hover": {
              "backgroundColor": "#1e40af"
            }
          },
          "secondary": {
            "backgroundColor": "#dc2626",
            "color": "#ffffff",
            "border": "none",
            "borderRadius": "0.375rem",
            "padding": "0.75rem 1.5rem",
            "fontSize": "0.875rem",
            "fontWeight": "600",
            "hover": {
              "backgroundColor": "#b91c1c"
            }
          },
          "outline": {
            "backgroundColor": "transparent",
            "color": "#1e3a8a",
            "border": "1px solid #1e3a8a",
            "borderRadius": "0.375rem",
            "padding": "0.75rem 1.5rem",
            "fontSize": "0.875rem",
            "fontWeight": "600",
            "hover": {
              "backgroundColor": "#1e3a8a",
              "color": "#ffffff"
            }
          }
        }
      },

      "newsletterSignup": {
        "description": "Newsletter signup form component",
        "design": {
          "backgroundColor": "#f9fafb",
          "borderRadius": "0.5rem",
          "padding": "2rem",
          "textAlign": "center",
          "marginBottom": "3rem"
        },
        "title": {
          "fontSize": "1.5rem",
          "fontWeight": "700",
          "color": "#1f2937",
          "marginBottom": "0.5rem"
        },
        "description": {
          "fontSize": "1rem",
          "color": "#6b7280",
          "marginBottom": "1.5rem"
        },
        "form": {
          "display": "flex",
          "gap": "0.5rem",
          "maxWidth": "400px",
          "margin": "0 auto"
        },
        "input": {
          "flex": "1",
          "padding": "0.75rem",
          "borderRadius": "0.375rem",
          "border": "1px solid #d1d5db",
          "fontSize": "0.875rem"
        },
        "button": {
          "backgroundColor": "#1e3a8a",
          "color": "#ffffff",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "0.375rem",
          "fontWeight": "600"
        }
      },

      "footer": {
        "description": "Multi-column footer with links and social media",
        "design": {
          "backgroundColor": "#f9fafb",
          "borderTop": "1px solid #e5e7eb",
          "padding": "3rem 0 2rem",
          "fontSize": "0.875rem"
        },
        "columns": {
          "layout": "grid",
          "gridTemplateColumns": "repeat(auto-fit, minmax(200px, 1fr))",
          "gap": "2rem"
        },
        "columnTitle": {
          "fontSize": "0.875rem",
          "fontWeight": "600",
          "color": "#1f2937",
          "marginBottom": "1rem"
        },
        "links": {
          "color": "#6b7280",
          "textDecoration": "none",
          "hover": {
            "color": "#1e3a8a"
          }
        },
        "socialMedia": {
          "display": "flex",
          "gap": "1rem",
          "justifyContent": "center",
          "marginTop": "2rem"
        },
        "copyright": {
          "textAlign": "center",
          "color": "#6b7280",
          "fontSize": "0.75rem",
          "marginTop": "2rem",
          "borderTop": "1px solid #e5e7eb",
          "paddingTop": "2rem"
        }
      },

      "testimonial": {
        "description": "Testimonial component with quote and author",
        "design": {
          "backgroundColor": "#ffffff",
          "padding": "2rem",
          "borderRadius": "0.5rem",
          "borderLeft": "4px solid #1e3a8a",
          "marginBottom": "2rem"
        },
        "quote": {
          "fontSize": "1.125rem",
          "fontStyle": "italic",
          "color": "#1f2937",
          "marginBottom": "1rem",
          "lineHeight": "1.625"
        },
        "author": {
          "display": "flex",
          "alignItems": "center",
          "gap": "1rem"
        },
        "authorImage": {
          "width": "48px",
          "height": "48px",
          "borderRadius": "50%"
        },
        "authorInfo": {
          "name": {
            "fontSize": "0.875rem",
            "fontWeight": "600",
            "color": "#1f2937"
          },
          "title": {
            "fontSize": "0.75rem",
            "color": "#6b7280"
          }
        }
      },

      "badgeSection": {
        "description": "Trust badges and certifications section",
        "design": {
          "backgroundColor": "#ffffff",
          "padding": "2rem",
          "textAlign": "center",
          "borderRadius": "0.5rem",
          "marginBottom": "2rem"
        },
        "title": {
          "fontSize": "1.25rem",
          "fontWeight": "700",
          "color": "#1f2937",
          "marginBottom": "1rem"
        },
        "badges": {
          "display": "flex",
          "justifyContent": "center",
          "alignItems": "center",
          "gap": "2rem",
          "flexWrap": "wrap"
        },
        "badge": {
          "height": "48px",
          "width": "auto",
          "filter": "grayscale(1)",
          "opacity": "0.7",
          "hover": {
            "filter": "grayscale(0)",
            "opacity": "1"
          }
        },
        "features": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fit, minmax(150px, 1fr))",
          "gap": "1rem",
          "marginTop": "1.5rem"
        },
        "feature": {
          "display": "flex",
          "alignItems": "center",
          "gap": "0.5rem",
          "fontSize": "0.875rem",
          "color": "#4b5563"
        },
        "featureIcon": {
          "width": "20px",
          "height": "20px",
          "color": "#10b981"
        }
      }
    },

    "layoutPatterns": {
      "blogPost": {
        "description": "Blog post layout with sidebar",
        "container": {
          "maxWidth": "1200px",
          "margin": "0 auto",
          "padding": "0 1rem"
        },
        "grid": {
          "display": "grid",
          "gridTemplateColumns": "1fr 320px",
          "gap": "3rem",
          "marginTop": "2rem"
        },
        "article": {
          "maxWidth": "none"
        },
        "sidebar": {
          "position": "sticky",
          "top": "2rem",
          "height": "fit-content"
        }
      },
      "fullWidth": {
        "description": "Full-width content layout",
        "container": {
          "maxWidth": "1200px",
          "margin": "0 auto",
          "padding": "0 1rem"
        }
      },
      "centered": {
        "description": "Centered content layout",
        "container": {
          "maxWidth": "768px",
          "margin": "0 auto",
          "padding": "0 1rem"
        }
      }
    },

    "animations": {
      "fadeIn": {
        "duration": "0.5s",
        "easing": "ease-out",
        "keyframes": {
          "from": { "opacity": "0" },
          "to": { "opacity": "1" }
        }
      },
      "fadeUp": {
        "duration": "0.5s",
        "easing": "ease-out",
        "keyframes": {
          "from": { "opacity": "0", "transform": "translateY(20px)" },
          "to": { "opacity": "1", "transform": "translateY(0)" }
        }
      },
      "slideDown": {
        "duration": "0.3s",
        "easing": "ease-out",
        "keyframes": {
          "from": { "height": "0", "opacity": "0" },
          "to": { "height": "auto", "opacity": "1" }
        }
      }
    },

    "responsiveBreakpoints": {
      "xs": "320px",
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },

    "accessibility": {
      "colorContrast": {
        "minimum": "AA",
        "enhanced": "AAA"
      },
      "focusStates": {
        "outlineColor": "#1e3a8a",
        "outlineWidth": "2px",
        "outlineStyle": "solid",
        "outlineOffset": "2px"
      },
      "textSize": {
        "minimum": "16px",
        "scalable": true
      }
    }
  }
} 