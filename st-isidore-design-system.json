{
  "designSystem": {
    "name": "St. Isidore Inspired Church Design System",
    "version": "1.0.0",
    "description": "Comprehensive design system based on St. Isidore Church's successful patterns for First Baptist Church implementation",
    
    "architecture": {
      "framework": "Next.js 15 with App Router",
      "componentLibrary": "Radix UI + Custom Components",
      "styling": "Tailwind CSS with HSL Custom Properties",
      "stateManagement": "React Context + React Query",
      "typeSystem": "TypeScript",
      "routing": "File-based App Router with Nested Routes"
    },

    "navigation": {
      "structure": "mega-menu-hierarchical",
      "primaryCategories": [
        {
          "id": "im-new",
          "label": "I'm New",
          "icon": "UserPlus",
          "description": "For first-time visitors and newcomers",
          "items": [
            {
              "title": "Plan Your Visit",
              "href": "/visit",
              "description": "Everything you need to know for your first visit",
              "icon": "MapPin"
            },
            {
              "title": "What to Expect",
              "href": "/visit/what-to-expect",
              "description": "Service times, dress code, and what happens during service",
              "icon": "Clock"
            },
            {
              "title": "Next Steps",
              "href": "/next-steps",
              "description": "Your journey of faith starts here",
              "icon": "ArrowRight"
            },
            {
              "title": "Join Us Online",
              "href": "/live",
              "description": "Watch our services live or on-demand",
              "icon": "Monitor"
            }
          ]
        },
        {
          "id": "about",
          "label": "About Us",
          "icon": "Church",
          "description": "Learn about our church, beliefs, and team",
          "items": [
            {
              "title": "Our Beliefs",
              "href": "/about/beliefs",
              "description": "What we believe and why it matters",
              "icon": "Book"
            },
            {
              "title": "Our History",
              "href": "/about/history",
              "description": "Our story and heritage in the community",
              "icon": "History"
            },
            {
              "title": "Leadership Team",
              "href": "/about/team",
              "description": "Meet our pastors and staff",
              "icon": "Users"
            },
            {
              "title": "Contact Us",
              "href": "/contact",
              "description": "Get in touch with us",
              "icon": "Mail"
            }
          ]
        },
        {
          "id": "connect",
          "label": "Connect",
          "icon": "Users",
          "description": "Join our community and get involved",
          "items": [
            {
              "title": "Ministries",
              "href": "/ministries",
              "description": "Find your place to serve and grow",
              "icon": "Heart"
            },
            {
              "title": "Events",
              "href": "/events",
              "description": "Upcoming church events and activities",
              "icon": "Calendar"
            },
            {
              "title": "Small Groups",
              "href": "/groups",
              "description": "Connect with others in intimate settings",
              "icon": "Users"
            },
            {
              "title": "Volunteer",
              "href": "/volunteer",
              "description": "Use your gifts to serve others",
              "icon": "HandHeart"
            },
            {
              "title": "Prayer Requests",
              "href": "/prayer",
              "description": "Share your prayer needs with us",
              "icon": "MessageSquare"
            },
            {
              "title": "Community Outreach",
              "href": "/outreach",
              "description": "Serving our local community",
              "icon": "Globe"
            }
          ]
        },
        {
          "id": "resources",
          "label": "Resources",
          "icon": "BookOpen",
          "description": "Spiritual growth and learning materials",
          "items": [
            {
              "title": "Sermons",
              "href": "/sermons",
              "description": "Watch or listen to past messages",
              "icon": "Play"
            },
            {
              "title": "Weekly Newsletter",
              "href": "/newsletter",
              "description": "Stay updated with church news",
              "icon": "Mail"
            },
            {
              "title": "Articles & Insights",
              "href": "/articles",
              "description": "Spiritual growth content and reflections",
              "icon": "FileText"
            },
            {
              "title": "Photo Gallery",
              "href": "/gallery",
              "description": "Memories from our community",
              "icon": "Images"
            },
            {
              "title": "FAQ",
              "href": "/faq",
              "description": "Frequently asked questions",
              "icon": "HelpCircle"
            }
          ]
        },
        {
          "id": "give",
          "label": "Give",
          "icon": "Heart",
          "href": "/give",
          "description": "Support our ministry through giving",
          "featured": true
        }
      ],
      "mobileNavigation": {
        "hamburgerMenu": true,
        "slideOutPanel": true,
        "searchIntegration": true
      }
    },

    "components": {
      "layout": {
        "header": {
          "variant": "sticky-transparent-blur",
          "height": "80px",
          "scrollBehavior": "hide-show",
          "logoPlacement": "left",
          "navigationStyle": "horizontal-mega-menu",
          "ctaButton": {
            "text": "Give",
            "variant": "accent",
            "placement": "right"
          }
        },
        "footer": {
          "style": "informational-grid",
          "sections": ["contact", "quickLinks", "services", "social"],
          "newsletter": true,
          "branding": "bottom-center"
        }
      },
      "contentBlocks": {
        "hero": {
          "variants": ["carousel", "video-background", "image-text"],
          "defaultContent": {
            "headline": "Welcome Home",
            "subheading": "Embracing everyone's journey of faith",
            "callToAction": "Plan Your Visit"
          }
        },
        "featuredContent": {
          "connectingPoint": {
            "layout": "card-with-image",
            "updateFrequency": "weekly",
            "readMoreLink": true,
            "shareOptions": true
          },
          "upcomingEvents": {
            "layout": "grid-3-column",
            "itemsDisplayed": 3,
            "viewAllLink": true,
            "filterOptions": ["all", "worship", "fellowship", "outreach"]
          }
        },
        "eventCard": {
          "elements": ["date", "title", "time", "category", "rsvpCount"],
          "hoverEffects": true,
          "quickActions": ["rsvp", "calendar", "share"]
        },
        "articleCard": {
          "elements": ["image", "category", "title", "excerpt", "readTime"],
          "layout": "vertical-card",
          "categoryColors": {
            "spiritual-growth": "emerald",
            "community": "blue",
            "family": "purple",
            "youth": "orange"
          }
        },
        "newsletter": {
          "placement": ["homepage", "footer", "articles"],
          "incentive": "Weekly spiritual insights and church updates",
          "doubleOptIn": true
        }
      }
    },

    "styling": {
      "colorSystem": {
        "primary": {
          "50": "hsl(24, 70%, 97%)",
          "100": "hsl(24, 75%, 94%)",
          "500": "hsl(24, 89%, 54%)",
          "600": "hsl(24, 89%, 48%)",
          "900": "hsl(24, 89%, 20%)"
        },
        "neutral": {
          "50": "hsl(0, 0%, 98%)",
          "100": "hsl(0, 0%, 96%)",
          "500": "hsl(0, 0%, 45%)",
          "900": "hsl(0, 0%, 9%)"
        },
        "semantic": {
          "success": "hsl(142, 76%, 36%)",
          "warning": "hsl(38, 92%, 50%)",
          "error": "hsl(0, 84%, 60%)",
          "info": "hsl(217, 91%, 60%)"
        }
      },
      "typography": {
        "fontFamilies": {
          "serif": ["Lora", "Georgia", "serif"],
          "sans": ["Inter", "system-ui", "sans-serif"]
        },
        "headingStyles": {
          "h1": "font-lora text-4xl md:text-5xl font-bold",
          "h2": "font-lora text-3xl md:text-4xl font-bold",
          "h3": "font-lora text-2xl md:text-3xl font-semibold"
        },
        "bodyStyles": {
          "large": "text-lg leading-relaxed",
          "default": "text-base leading-normal",
          "small": "text-sm leading-snug"
        }
      },
      "spacing": {
        "sections": "16rem",
        "components": "4rem",
        "elements": "1.5rem"
      },
      "borderRadius": {
        "cards": "0.75rem",
        "buttons": "0.5rem",
        "inputs": "0.5rem"
      }
    },

    "interactions": {
      "animations": {
        "pageTransitions": "fade-up 0.3s ease-out",
        "hoverEffects": "scale-105 transition-transform 0.2s",
        "loadingStates": "pulse-gentle",
        "scrollReveal": "fade-up-on-scroll"
      },
      "microInteractions": {
        "buttonHover": "shadow-lift + color-shift",
        "cardHover": "shadow-expand + translate-y",
        "navigationHover": "underline-expand",
        "imageHover": "scale-subtle"
      }
    },

    "contentStrategy": {
      "homepage": {
        "sections": [
          "hero-welcome",
          "mission-statement",
          "connecting-point-featured",
          "upcoming-events",
          "community-testimonials",
          "service-information",
          "newsletter-signup"
        ],
        "primaryCTA": "Plan Your Visit",
        "secondaryCTA": "Watch Online"
      },
      "eventManagement": {
        "categories": ["worship", "fellowship", "outreach", "youth", "education"],
        "recurringEvents": "auto-generate",
        "rsvpIntegration": true,
        "calendarExport": true
      },
      "articleSystem": {
        "categories": ["spiritual-growth", "community", "announcements", "testimonials"],
        "publicationSchedule": "weekly-connecting-point",
        "authorProfiles": true,
        "socialSharing": true,
        "commentSystem": false
      }
    },

    "responsiveDesign": {
      "breakpoints": {
        "mobile": "640px",
        "tablet": "768px",
        "desktop": "1024px",
        "wide": "1280px"
      },
      "mobileOptimizations": {
        "navigation": "slide-out-menu",
        "eventCards": "single-column",
        "textSize": "increased-readability",
        "touchTargets": "44px-minimum"
      }
    },

    "accessibility": {
      "colorContrast": "WCAG AA compliant",
      "keyboardNavigation": "full-support",
      "screenReaderSupport": "aria-labels-and-descriptions",
      "focusManagement": "visible-focus-indicators",
      "skipLinks": "main-content-navigation"
    },

    "performance": {
      "imageOptimization": "next-image-with-lazy-loading",
      "codesplitting": "route-based-chunks",
      "prefetching": "link-hover-prefetch",
      "caching": "static-generation-with-revalidation"
    },

    "integrations": {
      "calendar": "google-calendar-sync",
      "newsletter": "mailchimp-or-convertkit",
      "donations": "stripe-or-paypal",
      "livestream": "youtube-or-vimeo-embed",
      "analytics": "google-analytics-4",
      "search": "algolia-or-fuse-js"
    }
  }
} 